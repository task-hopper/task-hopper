{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "simple": {
            "format": "%(asctime)s - %(levelname)s - [%(name)s]: %(message)s"
        }
    },
    "handlers": {
        "file_handler": {
            "class": "logging.handlers.HopLogFileHandler",
            "level": "DEBUG",
            "formatter": "simple",
            "filename": "hop.log"
        },
        "console_handler": {
            "class": "logging.StreamHandler",
            "level": "DEBUG",
            "formatter": "simple",
            "stream": "ext://sys.stdout"
        }
    },
    "root": {
        "level": "DEBUG",
        "handlers": ["file_handler", "console_handler"]
    }
}
